<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #f4f5fb;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.AdminController">

    <!-- TOP BAR + TABS -->
    <top>
        <VBox>
            <children>

                <!-- TOP BAR WITH TITLE + LOGOUT -->
                <HBox alignment="CENTER_LEFT" spacing="10"
                      style="-fx-background-color: #ffffff; -fx-padding: 10 20 0 20;">
                    <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;"
                               text="Admin Dashboard - ICT Service Desk" />
                        <HBox HBox.hgrow="ALWAYS"/> <!-- spacer -->
                        <Button text="Logout" onAction="#handleLogout"/>
                    </children>
                </HBox>

                <!-- TABS -->
                <HBox alignment="CENTER_LEFT" spacing="10"
                      style="-fx-background-color: #ffffff; -fx-padding: 10 20 10 20;">
                    <children>
                        <Button fx:id="analyticsTab" onAction="#showAnalytics" text="Analytics &amp; Reports" />
                        <Button fx:id="feedbackTab" onAction="#showFeedback" text="User Feedback" />
                        <Button fx:id="logsTab" onAction="#showLogs" text="Activity Logs" />
                        <Button fx:id="faqTab" onAction="#showFaq" text="FAQ" />
                    </children>
                </HBox>

            </children>
        </VBox>
    </top>

    <!-- CENTER: PAGES IN ONE SCENE -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 0 20 20 20;">
            <children>

                <!-- ANALYTICS PAGE (FULL DASHBOARD) -->
                <ScrollPane fx:id="analyticsPage" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER">
                    <content>
                        <GridPane hgap="15" style="-fx-padding: 20;" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="50" />
                                <ColumnConstraints percentWidth="50" />
                            </columnConstraints>

                            <children>

                                <!-- Total Tickets -->
                                <VBox spacing="5" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-background-radius: 10;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <children>
                                        <Label style="-fx-text-fill: #757575;" text="Total Tickets" />
                                        <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="4" />
                                        <Label style="-fx-text-fill: #9e9e9e; -fx-font-size: 11px;" text="All time" />
                                    </children>
                                </VBox>

                                <!-- Avg Satisfaction -->
                                <VBox spacing="5" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-background-radius: 10;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <children>
                                        <Label style="-fx-text-fill: #757575;" text="Avg Satisfaction" />
                                        <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="0.0 / 5.0" />
                                        <Label style="-fx-text-fill: #9e9e9e; -fx-font-size: 11px;" text="Customer rating" />
                                    </children>
                                </VBox>

                                <!-- SLA + Escalated -->
                                <HBox spacing="15" GridPane.rowIndex="1">
                                    <children>
                                        <VBox prefHeight="99.0" prefWidth="311.0" spacing="5" style="-fx-background-color: #ffffff; -fx-padding: 15 20 15 15; -fx-background-radius: 10;">
                                            <children>
                                                <Label style="-fx-text-fill: #757575;" text="SLA Compliance" />
                                                <Label prefHeight="26.0" prefWidth="52.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="100%" />
                                                <Label style="-fx-text-fill: #9e9e9e; -fx-font-size: 11px;" text="On-time resolution" />
                                            </children>
                                        </VBox>

                                        <VBox prefHeight="99.0" prefWidth="253.0" spacing="5" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-background-radius: 10;">
                                            <children>
                                                <Label style="-fx-text-fill: #757575;" text="Escalated" />
                                                <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #d32f2f;" text="1" />
                                                <Label style="-fx-text-fill: #9e9e9e; -fx-font-size: 11px;" text="Requires attention" />
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>

                                <!-- Ticket Status Distribution -->
                                <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-background-radius: 10;" GridPane.rowIndex="2">
                                    <children>
                                        <Label style="-fx-font-weight: bold;" text="Ticket Status Distribution" />
                                        <HBox spacing="10">
                                            <children>
                                                <Label prefWidth="90" text="New" />
                                                <ProgressBar prefWidth="200" progress="0.25" />
                                                <Label text="1 (25%)" />
                                            </children>
                                        </HBox>
                                        <HBox spacing="10">
                                            <children>
                                                <Label prefWidth="90" text="In Progress" />
                                                <ProgressBar prefWidth="200" progress="0.25" />
                                                <Label text="1 (25%)" />
                                            </children>
                                        </HBox>
                                        <HBox spacing="10">
                                            <children>
                                                <Label prefWidth="90" text="Escalated" />
                                                <ProgressBar prefWidth="200" progress="0.25" />
                                                <Label text="1 (25%)" />
                                            </children>
                                        </HBox>
                                        <HBox spacing="10">
                                            <children>
                                                <Label prefWidth="90" text="Resolved" />
                                                <ProgressBar prefWidth="200" progress="0.25" />
                                                <Label text="1 (25%)" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- Right column: Category + Priority + Channels -->
                                <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">

                                    <!-- Priority Distribution -->
                                    <VBox spacing="8" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-background-radius: 10;">
                                        <children>
                                            <Label style="-fx-font-weight: bold;" text="Priority Distribution" />
                                            <HBox spacing="10">
                                                <children>
                                                    <Label style="-fx-background-color: #ffebee; -fx-padding: 2 6 2 6; -fx-background-radius: 10;" text="Urgent" />
                                                    <ProgressBar prefWidth="150" progress="0.25" />
                                                    <Label text="1" />
                                                </children>
                                            </HBox>
                                            <HBox spacing="10">
                                                <children>
                                                    <Label style="-fx-background-color: #fff3e0; -fx-padding: 2 6 2 6; -fx-background-radius: 10;" text="High" />
                                                    <ProgressBar prefWidth="150" progress="0.25" />
                                                    <Label text="1" />
                                                </children>
                                            </HBox>
                                            <HBox spacing="10">
                                                <children>
                                                    <Label style="-fx-background-color: #fff8e1; -fx-padding: 2 6 2 6; -fx-background-radius: 10;" text="Medium" />
                                                    <ProgressBar prefWidth="150" progress="0.50" />
                                                    <Label text="2" />
                                                </children>
                                            </HBox>
                                            <HBox spacing="10">
                                                <children>
                                                    <Label style="-fx-background-color: #e8f5e9; -fx-padding: 2 6 2 6; -fx-background-radius: 10;" text="Low" />
                                                    <ProgressBar prefWidth="150" progress="0.00" />
                                                    <Label text="0" />
                                                </children>
                                            </HBox>
                                        </children>
                                    </VBox>

                                    <!-- Submission Channels -->
                                    <VBox spacing="8" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-background-radius: 10;">
                                        <children>
                                            <Label style="-fx-font-weight: bold;" text="Submission Channels" />
                                            <HBox spacing="10">
                                                <children>
                                                    <Label prefWidth="80" text="Web" />
                                                    <ProgressBar prefWidth="150" progress="0.50" />
                                                    <Label text="2" />
                                                </children>
                                            </HBox>
                                            <HBox spacing="10">
                                                <children>
                                                    <Label prefWidth="80" text="Chatbot" />
                                                    <ProgressBar prefWidth="150" progress="0.25" />
                                                    <Label text="1" />
                                                </children>
                                            </HBox>
                                            <HBox spacing="10">
                                                <children>
                                                    <Label prefWidth="80" text="Email" />
                                                    <ProgressBar prefWidth="150" progress="0.25" />
                                                    <Label text="1" />
                                                </children>
                                            </HBox>
                                        </children>
                                    </VBox>

                                </VBox>

                                <!-- Category Breakdown -->
                                <VBox spacing="8" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-background-radius: 10;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <children>
                                        <Label style="-fx-font-weight: bold;" text="Category Breakdown" />
                                        <HBox spacing="10">
                                            <children>
                                                <Label prefWidth="80" text="Other" />
                                                <ProgressBar prefWidth="150" progress="0.25" />
                                                <Label text="1" />
                                            </children>
                                        </HBox>
                                        <HBox spacing="10">
                                            <children>
                                                <Label prefWidth="80" text="Email" />
                                                <ProgressBar prefWidth="150" progress="0.25" />
                                                <Label text="1" />
                                            </children>
                                        </HBox>
                                        <HBox spacing="10">
                                            <children>
                                                <Label prefWidth="80" text="Hardware" />
                                                <ProgressBar prefWidth="150" progress="0.25" />
                                                <Label text="1" />
                                            </children>
                                        </HBox>
                                        <HBox spacing="10">
                                            <children>
                                                <Label prefWidth="80" text="Network" />
                                                <ProgressBar prefWidth="150" progress="0.25" />
                                                <Label text="1" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                            </children>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>
                    </content>
                </ScrollPane>

                <!-- FEEDBACK PAGE -->
                <ScrollPane fx:id="feedbackPage" fitToWidth="true" hbarPolicy="NEVER" visible="false" managed="false">
                    <content>
                        <VBox spacing="10" style="-fx-background-color: transparent; -fx-padding: 0 0 20 0;">
                            <children>
                                <Label text="User Satisfaction Feedback"
                                       style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 0 0 5;"/>

                                <!-- Feedback card -->
                                <BorderPane prefHeight="120"
                                            style="-fx-background-color: #ffffff; -fx-background-radius: 12; -fx-padding: 15;">
                                    <left>
                                        <VBox spacing="4">
                                            <children>
                                                <Label fx:id="fbTitleLabel"
                                                       text="Cannot access email account"
                                                       style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                                                <Label fx:id="fbTicketIdLabel"
                                                       text="Ticket #1"
                                                       style="-fx-text-fill: #9e9e9e; -fx-font-size: 11px;"/>
                                                <Label fx:id="fbCommentLabel"
                                                       text="nice"
                                                       style="-fx-font-size: 12px;"/>
                                            </children>
                                        </VBox>
                                    </left>

                                    <right>
                                        <HBox alignment="TOP_RIGHT">
                                            <children>
                                                <Label fx:id="fbRatingLabel"
                                                       text="4 / 5 â˜…"
                                                       style="-fx-background-color: #fff8e1; -fx-background-radius: 12;
                                              -fx-padding: 4 10 4 10; -fx-font-size: 11px;"/>
                                            </children>
                                        </HBox>
                                    </right>
                                </BorderPane>

                            </children>
                        </VBox>
                    </content>
                </ScrollPane>

                <!-- LOGS PAGE -->
                <VBox fx:id="logsPage" managed="false" spacing="10" style="-fx-background-color: transparent;" visible="false">
                    <children>

                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 0 0 5;" text="System Activity Log" />

                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="400">
                            <content>
                                <VBox fx:id="logsContainer" spacing="8" style="-fx-padding: 5 0 10 0;">
                                    <!-- log rows will be added here from AdminController -->
                                </VBox>
                            </content>
                        </ScrollPane>

                    </children>
                </VBox>

                <!-- FAQ PAGE -->
                <VBox fx:id="faqPage" managed="false" spacing="10" style="-fx-background-color: transparent;" visible="false">
                    <children>

                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 0 0 5;" text="FAQ Management" />

                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="400">
                            <content>
                                <VBox fx:id="faqContainer" spacing="10" style="-fx-padding: 5 0 10 0;">
                                    <!-- FAQ cards will be added from AdminController -->
                                </VBox>
                            </content>
                        </ScrollPane>

                    </children>
                </VBox>

            </children>
        </StackPane>
    </center>

</BorderPane>
